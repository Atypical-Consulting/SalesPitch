@page "/frameworks"
@using SalesPitch.WebApp.Models

<PageTitle>Sales Frameworks - SalesPitch</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="frameworks-page">
    <!-- Page Header -->
    <MudGrid Justify="Justify.Center" Class="mb-8">
        <MudItem xs="12" lg="10">
            <div class="page-header">
                <div class="page-icon-container">
                    <MudIcon Icon="Icons.Material.Filled.Psychology" Size="Size.Large" Class="page-icon" />
                </div>
                <MudText Typo="Typo.h3" Align="Align.Center" Class="page-title mb-4">
                    Sales Frameworks Guide
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Secondary" Class="page-subtitle">
                    Master the art of persuasion with proven sales methodologies. Choose the right framework for your product and audience.
                </MudText>
            </div>
        </MudItem>
    </MudGrid>

    <!-- Quick Overview -->
    <MudGrid Justify="Justify.Center" Class="mb-12">
        <MudItem xs="12" lg="10">
            <MudPaper Class="overview-card pa-8" Elevation="3">
                <MudStack Spacing="4">
                    <MudText Typo="Typo.h5" Class="overview-title">
                        <MudIcon Icon="Icons.Material.Filled.Lightbulb" Class="mr-2" />
                        Why Use Sales Frameworks?
                    </MudText>
                    <MudText Typo="Typo.body1" Class="overview-text">
                        Sales frameworks provide structured approaches to crafting compelling messages that resonate with your audience. 
                        Each framework targets specific psychological triggers and customer needs, helping you convert prospects into customers more effectively.
                    </MudText>
                    <MudDivider />
                    <MudGrid Spacing="4">
                        <MudItem xs="12" md="4">
                            <MudStack AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="Icons.Material.Filled.Groups" Size="Size.Large" Color="Color.Primary" />
                                <MudText Typo="Typo.h6" Align="Align.Center">10 Frameworks</MudText>
                                <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">Proven methodologies</MudText>
                            </MudStack>
                        </MudItem>
                        <MudItem xs="12" md="4">
                            <MudStack AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="Icons.Material.Filled.TrendingUp" Size="Size.Large" Color="Color.Success" />
                                <MudText Typo="Typo.h6" Align="Align.Center">Higher Conversions</MudText>
                                <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">Structured persuasion</MudText>
                            </MudStack>
                        </MudItem>
                        <MudItem xs="12" md="4">
                            <MudStack AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="Icons.Material.Filled.Speed" Size="Size.Large" Color="Color.Warning" />
                                <MudText Typo="Typo.h6" Align="Align.Center">Quick Results</MudText>
                                <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">Instant framework selection</MudText>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Frameworks Grid -->
    <MudGrid Spacing="6">
        @foreach (var framework in GetFrameworksInfo())
        {
            <MudItem xs="12" lg="6">
                <MudCard Class="framework-card h-100" Elevation="4">
                    <MudCardContent Class="pa-6">
                        <MudStack Spacing="4">
                            <!-- Framework Header -->
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                                <div class="framework-icon-container">
                                    <MudIcon Icon="@framework.Icon" Size="Size.Medium" Color="Color.Primary" />
                                </div>
                                <MudStack Spacing="1">
                                    <MudText Typo="Typo.h5" Class="framework-title">@framework.Name</MudText>
                                    <MudText Typo="Typo.body2" Color="Color.Secondary">@framework.Acronym</MudText>
                                </MudStack>
                            </MudStack>
                            
                            <MudDivider />
                            
                            <!-- Description -->
                            <MudText Typo="Typo.body1" Class="framework-description">
                                @framework.Description
                            </MudText>
                            
                            <!-- Best For Section -->
                            <MudStack Spacing="2">
                                <MudText Typo="Typo.subtitle1" Class="section-title">
                                    <MudIcon Icon="Icons.Material.Filled.Star" Size="Size.Small" Class="mr-1" />
                                    Best For:
                                </MudText>
                                <MudStack Spacing="1">
                                    @foreach (var useCase in framework.BestFor)
                                    {
                                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                            <MudIcon Icon="Icons.Material.Filled.CheckCircle" Size="Size.Small" Color="Color.Success" />
                                            <MudText Typo="Typo.body2">@useCase</MudText>
                                        </MudStack>
                                    }
                                </MudStack>
                            </MudStack>
                            
                            <!-- Structure Section -->
                            <MudStack Spacing="2">
                                <MudText Typo="Typo.subtitle1" Class="section-title">
                                    <MudIcon Icon="Icons.Material.Filled.Architecture" Size="Size.Small" Class="mr-1" />
                                    Structure:
                                </MudText>
                                <MudStack Spacing="1">
                                    @foreach (var step in framework.Structure)
                                    {
                                        <MudPaper Class="structure-step pa-3" Elevation="1">
                                            <MudText Typo="Typo.body2" Class="step-text">
                                                <strong>@step.Title:</strong> @step.Description
                                            </MudText>
                                        </MudPaper>
                                    }
                                </MudStack>
                            </MudStack>
                        </MudStack>
                    </MudCardContent>
                    
                    <!-- Action Footer -->
                    <MudCardActions Class="pa-4 pt-0">
                        <MudButton Variant="Variant.Filled" 
                                  Color="Color.Primary" 
                                  StartIcon="Icons.Material.Filled.AutoAwesome"
                                  Class="framework-try-button"
                                  Href="@($"/generate?framework={framework.Framework}")">
                            Try @framework.Name
                        </MudButton>
                        <MudSpacer />
                        <MudChip T="string" Text="@framework.Difficulty" 
                                Color="@GetDifficultyColor(framework.Difficulty)" 
                                Size="Size.Small" />
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>

    <!-- Call to Action -->
    <MudGrid Justify="Justify.Center" Class="cta-section mt-16">
        <MudItem xs="12" md="8">
            <MudPaper Class="cta-container pa-8" Elevation="3">
                <MudStack Spacing="6" AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h4" Align="Align.Center" Class="cta-title">
                        Ready to Create Your Perfect Sales Pitch?
                    </MudText>
                    <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary">
                        Choose a framework that matches your product and start generating compelling sales content with AI.
                    </MudText>
                    <MudButton Variant="Variant.Filled" 
                              Color="Color.Primary" 
                              Size="Size.Large"
                              StartIcon="@Icons.Material.Filled.AutoAwesome"
                              Class="cta-final"
                              Href="/generate">
                        Start Generating Now
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

